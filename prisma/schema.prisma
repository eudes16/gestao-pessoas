generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime? @updatedAt
}

model Poeple {
  id            Int                 @id @default(autoincrement())
  name          String
  gender        PoepleGender
  birthDate     DateTime
  maritalStatus PoepleMaritalStatus @default(single)
  addresses     Address[]
  createdAt     DateTime            @default(now())
  updatedAt     DateTime?           @updatedAt
  deletedAt     DateTime?           
}

model Address {
  id           Int       @id @default(autoincrement())
  zipCode      String
  street       String
  number       String
  complement   String?
  neighborhood String
  city         String
  state        String
  poepleId     Int
  poeple       Poeple    @relation(fields: [poepleId], references: [id])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime? @updatedAt
  deletedAt    DateTime? 
}

enum PoepleMaritalStatus {
  single
  married
  divorced
  widowed
}

enum PoepleGender {
  male
  female
}
